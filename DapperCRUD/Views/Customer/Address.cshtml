@model IEnumerable<DapperCRUD.Models.Address>

@{
    ViewData["Title"] = "Address";
}

<h1>آدرس</h1>

<p>
    <a asp-action="CreateAddress">Create New</a>
</p>
<table class="table table-striped table-bordered" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddressName)
                
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressName)
                
                </td>
               
                <td>
                    <a class="btn btn-sm btn-success" asp-action="EditAddress" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-info" asp-action="DetailsAddress" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-sm btn-danger" asp-action="DeleteAddress" asp-controller="Customer" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/Address/Address_CRUD.js"></script>

<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
