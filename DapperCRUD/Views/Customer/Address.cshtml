@model IEnumerable<DapperCRUD.Models.Address>

@{
    ViewData["Title"] = "Address";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddressName)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressName)
                </td>
               
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-controller="Customer" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-info" asp-action="DetailsAddress" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-sm btn-danger" onclick="DeleteCoutomer('@item.Id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/Branch/Branch_CRUD.js"></script>

